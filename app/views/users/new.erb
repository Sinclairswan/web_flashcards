<div class="sub-section text-center">

 <% if @errors %>
    <p>Something went wrong...</p>
     <p style="color: black">
     <% @errors.each do |error| %>
     <br>
       <%= error %>
       <% end %>
     </p>
  <% end %>

  <h2>On the Registration Page...</h2>
  <h4>Table: users</h4>
  <h4>Columns: username, email, password</h4>

  <div class="container">
    <form class="form-inline text-center sub-section-form" action="/users" method="post">
      <div class="form-group">
        <input class="shadow" name="user[username]" type="text" placeholder="username" />
      </div>
      <div class="form-group">
        <input class="shadow" name="user[email]" type="text"  placeholder="email name" />
      </div>
      <div class="form-group">
        <input class="shadow" name="user[password]" type="password" placeholder="password" />
      </div>
      <div class="form-group">
        <input name="commit" type="submit" value="Register" class="btn btn-success">
      </div>
    </form>
  </div>

</div>
