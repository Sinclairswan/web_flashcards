<h2><%= @card.question %></h2>

<% if @correct == false  %>

<form method="post" action="/card/<%=@card.deck_id%>/<%=@card.id%>">
<label for= "answer">Submit your answer:</label>
<br>
<br>
<input type="text" name="user_answer">
<br>
<br>
<input type="submit" name="submit" value="Submit Answer">
<input type="submit" name="give_up" value="I give up!">
</form>

<% else %>

<form method="post" action="/card/<%=@card.deck_id%>/<%=@card.id + 1%>">
<label for= "answer">Submit your answer:</label>
<br>
<br>
<input type="text" name="user_answer">
<br>
<br>
<input type="submit" name="submit" value="Submit Answer">
<input type="submit" name="give_up" value="I give up!">
</form>


<% end %>











